{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "hide-files.files": [],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#870f94",
    "activityBar.background": "#870f94",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#1d1a03",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#870f94",
    "statusBar.background": "#5d0a66",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#870f94",
    "statusBarItem.remoteBackground": "#5d0a66",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#5d0a66",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#5d0a6699",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#5d0a66",

  // Use Biome as default formatter
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "never",
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  // Recommended editor behaviors
  "files.eol": "\n", // Always LF
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Let Biome handle linting instead of ESLint
  "eslint.enable": false,
  "biome.enabled": true,
  "prettier.enable": false,

  "prettier.configPath": ".prettierrc",

  // Indent setting
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": false,
  "editor.detectIndentation": false,

  "editor.wordWrap": "on",

  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.allowVariableFontsInAccessibilityMode": true,

  "files.associations": {
    "**/.env*": "dotenv",
    "web.config": "xml",
    "web.local.config": "xml",
    "**/src/**/*.css": "tailwindcss"
  },

  "git.autofetchPeriod": 180,

  // Optional: tailor formatting
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "WillLuke.nextjs.addTypesOnSave": true,
  "WillLuke.nextjs.hasPrompted": true,
  "sqltools.connections": [
    {
      "ssh": "Disabled",
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "localhost",
      "group": "local",
      "database": "nextjs_nextauth_db",
      "username": "tarang",
      "password": "m00ns00n"
    }
  ]
}
